<Window x:Class="EventPlanner.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profile" Height="400" Width="400">
    <Grid Background="#F8F8F8">
        <StackPanel Margin="20">
            <TextBlock x:Name="welcomeMessageTextBlock" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 20" Foreground="#333333"/>
            <TextBlock Text="Select Event Type" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 20" Foreground="#333333"/>
            <Button Content="Movie" Click="Movie_Click" Width="120" HorizontalAlignment="Center" Background="#4CAF50" Foreground="White" Padding="10" FontSize="16" FontWeight="Bold" Margin="0 10 0 10"/>
            <Button Content="Concert" Click="Concert_Click" Width="120" HorizontalAlignment="Center" Background="#2196F3" Foreground="White" Padding="10" FontSize="16" FontWeight="Bold" Margin="0 10 0 10"/>
            <Button Content="Conference" Click="Conference_Click" Width="120" HorizontalAlignment="Center" Background="#FF5722" Foreground="White" Padding="10" FontSize="16" FontWeight="Bold" Margin="0 10 0 10"/>
            <Button Content="Workshop" Click="Workshop_Click" Width="120" HorizontalAlignment="Center" Background="#9C27B0" Foreground="White" Padding="10" FontSize="16" FontWeight="Bold" Margin="0 10 0 10"/>
        </StackPanel>
    </Grid>
</Window>
