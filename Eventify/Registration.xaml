<Window x:Class="EventPlanner.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration" Height="400" Width="400">
    <Grid Background="#F8F8F8">

        <StackPanel Margin="20">
            <TextBlock Text="Registration" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 20" Foreground="#333333"/>
            <TextBlock Text="Username:" Foreground="#333333"/>
            <TextBox x:Name="usernameTextBox" Margin="0 0 0 10" Padding="5" BorderThickness="1" BorderBrush="#CCCCCC" Background="White" VerticalContentAlignment="Center"/>
            <TextBlock Text="Password:" Foreground="#333333"/>
            <PasswordBox x:Name="passwordBox" Margin="0 0 0 10" Padding="5" BorderThickness="1" BorderBrush="#CCCCCC" Background="White" VerticalContentAlignment="Center"/>
            <TextBlock Text="Email:" Foreground="#333333"/>
            <TextBox x:Name="emailTextBox" Margin="0 0 0 10" Padding="5" BorderThickness="1" BorderBrush="#CCCCCC" Background="White" VerticalContentAlignment="Center"/>
            <Button Content="Register" Click="Register_Click" Width="120" HorizontalAlignment="Center" Background="#4CAF50" Foreground="White" Padding="10" FontSize="16" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
